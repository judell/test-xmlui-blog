  <Theme
    marginTop-H1-blog-header="$space-2"
    marginBottom-H1-blog-header="$space-0"
    fontSize-Text-blog-attribution="$fontSize-sm"
    fontStyle-Text-blog-attribution="italic"
    marginTop-Text-blog-attribution="0"
