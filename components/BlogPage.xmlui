    <Stack marginLeft="10%" marginRight="10%">
      <Link
        fontSize="$fontSize-xs"
        textDecorationLine="none"
        label="← All posts"
        to="/blog" />
      <H1>
        {$props.post.title}
      </H1>
      <Text variant="blog-attribution">
        {$props.post.date} • {$props.post.author}
      </Text>
      <Image src="/blog/images/{$props.post.image}" />
      <Markdown variant="blog-body" data="/blog/{$props.post.slug}.md" />
    </Stack>
